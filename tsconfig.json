{
  "compilerOptions": {
    "lib": ["es6", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "target": "es6",
    "declaration": true
  },

  "include": [ "./src" ]
}
